    <ContentPage Title="Vencimentos">
        <StackLayout BackgroundColor="#CCCCCC">
            <StackLayout  BackgroundColor="#CCCCCC"
                          Spacing="2"
                          Orientation="Horizontal">
                <Label Text="Folha Mensal"                         
                       HorizontalOptions="Center"
                       StyleClass="Subheader"
                       TextColor="#433C3C"
                       Margin="10"/>
                <Label Text="{Binding DataFolha, StringFormat='{0:dd/MM/yyyy}'}"                          
                       HorizontalOptions="EndAndExpand"
                       StyleClass="Subheader"
                       TextColor="#433C3C"
                       Margin="10"/>
            </StackLayout>
            
            <StackLayout Padding="20"
                         Spacing="10"
                         HorizontalOptions="FillAndExpand"
                         BackgroundColor="#E0E0E0">

                
                <Label Text="Vencimentos:"
                       StyleClass="Subheader"
                       TextColor="Black"/>
                
                <StackLayout>
                    <ListView x:Name="lvDetalheDoReciboVencomentos" 
                                  ItemsSource="{Binding Vencimentos, Mode=TwoWay}" 
                                  VerticalOptions="Center"
                                  BackgroundColor="White"
                                  SeparatorVisibility="Default"
                                  SeparatorColor="Black"                  
                                  >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell Text="{Binding Vdb}"
                                           Detail="{Binding DescricaoVencto}" 
                                           TextColor="Black"                      
                                       />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
            
            <StackLayout  BackgroundColor="#CCCCCC"
                          Spacing="2"
                          Orientation="Horizontal">
                <Label Text="Total:"                         
                       HorizontalOptions="Center"
                       StyleClass="Subheader"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Margin="10"/>
                <Label Text="{Binding TotalVencto, StringFormat='R$ {0:0.0,0}'}"                          
                       HorizontalOptions="EndAndExpand"
                       StyleClass="Subheader"
                       TextColor="Green"
                       FontAttributes="Bold"
                       Margin="10"/>
            </StackLayout>
        </StackLayout>
  </ContentPage>

    <ContentPage Title="Descontos">
        <StackLayout BackgroundColor="#CCCCCC">
            <StackLayout  BackgroundColor="#CCCCCC"
                          Spacing="2"
                          Orientation="Horizontal">
                <Label Text="Folha Mensal"                         
                       HorizontalOptions="Center"
                       StyleClass="Subheader"
                       TextColor="#433C3C"
                       Margin="10"/>
                <Label Text="{Binding DataFolha, StringFormat='{0:dd/MM/yyyy}'}"                          
                       HorizontalOptions="EndAndExpand"
                       StyleClass="Subheader"
                       TextColor="#433C3C"
                       Margin="10"/>
            </StackLayout>

            <StackLayout Padding="20"
                         Spacing="10"
                         HorizontalOptions="FillAndExpand"
                         BackgroundColor="#E0E0E0">


                <Label Text="Descontos:"
                       StyleClass="Subheader"
                       TextColor="Black"/>

                <StackLayout>
                    <ListView x:Name="lvDetalheDoReciboDescontos" 
                                ItemsSource="{Binding Descontos, Mode=TwoWay}" 
                                VerticalOptions="Center"
                                BackgroundColor="White"
                                SeparatorVisibility="Default"
                                SeparatorColor="Black"                  
                                  >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell Text="{Binding Vdb}"
                                           Detail="{Binding DescricaoDesc}" 
                                           TextColor="Black"                      
                                       />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>

            <StackLayout  BackgroundColor="#CCCCCC"
                          Spacing="2"
                          Orientation="Horizontal">
                <Label Text="Total:"                         
                       HorizontalOptions="Center"
                       StyleClass="Subheader"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Margin="10"/>
                <Label Text="{Binding TotalDesc, StringFormat='R$ {0:0.0,0}'}"                          
                       HorizontalOptions="EndAndExpand"
                       StyleClass="Subheader"
                       TextColor="Red"
                       FontAttributes="Bold"
                       Margin="10"/>
            </StackLayout>
        </StackLayout>
    </ContentPage>
</TabbedPage>