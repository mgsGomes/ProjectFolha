                        <Label Text="Base INSS"
                           StyleClass="Body"
                           TextColor="#433C3C"
                           HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <!--Base IRRF-->
                    <StackLayout Orientation="Vertical"
                             Margin="10,20,0,0"
                             HeightRequest="80"
                             HorizontalOptions="CenterAndExpand">
